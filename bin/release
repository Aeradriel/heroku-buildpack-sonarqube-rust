#!/usr/bin/env bash
# bin/release <build-dir>

BUILD_DIR=$1

cat > boot.sh <<EOF
#!/bin/sh

sed -i -r "s/#(sonar\.web\.port:\s+)9000/\1 ${PORT}/g" sonar/conf/sonar.properties
exec sonar/bin/linux-x86-64/sonar.sh console
EOF

chmod +x boot.sh

cat <<EOF
---

config_vars:
  JAVA_OPTS: -Xmx384m -Xss512k -XX:+UseCompressedOops

default_process_types:
  web: boot.sh
EOF
